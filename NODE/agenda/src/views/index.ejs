<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">

      <h1 class="text-center">Agenda</h1>
      <% if(contatos.length > 0)  {%> 
      <p class="text-center lead">
        Seus contatos estão abaixo.
      </p>
      <% } %> 

      <%- include('includes/messages') %> 

      <div class="responsive-table">
        <% if(contatos.length > 0)  {%> 
        <table class="table my-3">
          <% contatos.forEach(contato => { %>

            <tr>
              <td><%= contato.name %> </td>
              <td><%= contato.surname %> </td>
              <td><%= contato.email %> </td>
              <td><%= contato.phone %> </td>
              <td><a class="text-decoration-none" href="/contato/index/<%= contato._id %> ">Editar</a></td>
              <td><a class="text-danger text-decoration-none" href="/contato/delete/<%= contato._id %> ">Excluir</a></td>
            </tr> 

          <% }) %>

        </table>
        <% } else { %>
          <p class="text-center lead">Não existem contatos registrados.</p>
        <% } %> 
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
  
<%- include('includes/footer') %>